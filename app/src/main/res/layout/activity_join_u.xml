<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity_U">

    <Button
        android:id="@+id/btn_joinok_u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="50dp"
        android:text="@string/btn_joinok_m"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_joincancel_u" />

    <Button
        android:id="@+id/btn_joincancel_u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        android:text="@string/btn_joincancel_m"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_joinok_u"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edt_joinid_u"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:hint="@string/edt_joinid_u"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/edt_joinpw_u"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_joinpw_u"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:ems="10"
        android:hint="@string/edt_joinpw_u"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/edt_name_u"
        app:layout_constraintEnd_toEndOf="@+id/edt_joinid_u"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_joinid_u"
        app:layout_constraintTop_toBottomOf="@+id/edt_joinid_u" />

    <RadioGroup
        android:id="@+id/gender"
        android:layout_width="119dp"
        android:layout_height="66dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="232dp"
        android:layout_marginRight="232dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_birth_u">

        <RadioButton
            android:id="@+id/radio_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/radio_man" />

        <RadioButton
            android:id="@+id/radio_woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/radio_woman" />

    </RadioGroup>

    <EditText
        android:id="@+id/edt_birth_u"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="@string/edt_birth_u"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/gender"
        app:layout_constraintEnd_toEndOf="@+id/edt_joinid_u"
        app:layout_constraintStart_toStartOf="@+id/edt_joinid_u"
        app:layout_constraintTop_toBottomOf="@+id/edt_tel_u" />

    <EditText
        android:id="@+id/edt_tel_u"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:ems="10"
        android:hint="@string/edt_tel_u"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/edt_birth_u"
        app:layout_constraintEnd_toEndOf="@+id/edt_joinid_u"
        app:layout_constraintStart_toStartOf="@+id/edt_joinid_u"
        app:layout_constraintTop_toBottomOf="@+id/edt_name_u" />

    <EditText
        android:id="@+id/edt_name_u"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:ems="10"
        android:hint="@string/edt_name_u"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/edt_tel_u"
        app:layout_constraintEnd_toEndOf="@+id/edt_joinid_u"
        app:layout_constraintStart_toStartOf="@+id/edt_joinid_u"
        app:layout_constraintTop_toBottomOf="@+id/edt_joinpw_u" />

</androidx.constraintlayout.widget.ConstraintLayout>